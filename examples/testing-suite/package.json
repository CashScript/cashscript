{
  "name": "testing-suite",
  "version": "0.13.0-next.0",
  "description": "Example project to develop and test CashScript contracts",
  "main": "index.js",
  "type": "module",
  "author": "mainnet-pat",
  "license": "MIT",
  "private": true,
  "directories": {
    "lib": "src",
    "test": "test"
  },
  "scripts": {
    "build": "yarn clean && yarn compile",
    "clean": "rm -rf ./dist",
    "compile": "tsc -p tsconfig.json && yarn run task:compile",
    "lint": "eslint . --ext .ts --ignore-path ../../.eslintignore",
    "prepare": "yarn build",
    "prepublishOnly": "yarn test && yarn lint",
    "task:compile": "tsx tasks/index.ts compile",
    "pretest": "yarn run task:compile",
    "test": "vitest run"
  },
  "dependencies": {
    "@bitauth/libauth": "^3.1.0-next.8",
    "cashc": "^0.13.0-next.0",
    "cashscript": "^0.13.0-next.0",
    "url-join": "^5.0.0"
  },
  "devDependencies": {
    "tsx": "^4.20.3",
    "typescript": "^5.9.2",
    "vitest": "^4.0.15"
  }
}
